<article class="campaign">
	<section class="campaign-head">
		<h2><%= link_to campaign.title, campaign_path(campaign) %></h2>
		<small>
			<time><%= campaign.created_at.to_date.strftime("%d %B, %Y")%>	</time>
			|
			<%= link_to t('common.edit'),edit_campaign_path(campaign)%>

			<%= link_to t('common.delete'),campaign_path(campaign), method: :delete, data: {confirm:  t('common.quest_to_delete')}%>
		</small>
	</section>

	<section class="campaign-summary">
		<%= campaign.summary %>
	</section>

	<section class="footer-summary">
		<%= raw campaign.tags.sort_by(&:name).map(&:name).map {|t| link_to t, tag_path(t), class: 'badge badge-primary'}.join(' ') %>
	</section>
</article>
