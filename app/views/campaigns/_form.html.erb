<%= form_for @campaign do |f| %>
<div class="form-group">
	<%= f.label :title %>
	<%= f.text_field :title,class: 'form-control' %>
</div>

<div class="form-group">
	<%= f.label :summary %>
	<%= f.text_area :summary,class: 'form-control' %>
</div>

<div class="form-group">
	<%= f.label :body %>
	<%= f.text_area :body,class: 'form-control' %>
</div>

<div class="form-group">
	<%= f.submit 'Save',class:'btn btn-primary' %>
</div>
<% end %>