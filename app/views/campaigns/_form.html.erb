<%= form_for @campaign do |f| %>
<div class="form_control">
	<%= f.label :title %>
	<%= f.text_field :title %>
</div>

<div class="form_control">
	<%= f.label :summary %>
	<%= f.text_area :summary %>
</div>

<div class="form_control">
	<%= f.label :body %>
	<%= f.text_area :body %>
</div>

<div class="form_control">
	<%= f.submit 'Save' %>
</div>
<% end %>